generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String       @id @default(uuid())
  username       String       @unique
  email          String       @unique
  password       String
  favorites      Favorite[]
  library        Library[]
  preferences    Preference?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model Manga {
  id             String        @id @default(uuid())
  title          String
  author         String?
  description    String?
  coverImage     String?
  genres         String[]
  chapters       Chapter[]
  favorites      Favorite[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model Chapter {
  id             String     @id @default(uuid())
  number         Int
  title          String?
  images         String[]   // URLs des pages
  mangaId        String
  manga          Manga      @relation(fields: [mangaId], references: [id])
  createdAt      DateTime   @default(now())
}

model Library {
  id             String     @id @default(uuid())
  userId         String
  mangaId        String
  progress       Int        @default(0)
  user           User       @relation(fields: [userId], references: [id])
  manga          Manga      @relation(fields: [mangaId], references: [id])
  addedAt        DateTime   @default(now())
}

model Favorite {
  id             String     @id @default(uuid())
  userId         String
  mangaId        String
  user           User       @relation(fields: [userId], references: [id])
  manga          Manga      @relation(fields: [mangaId], references: [id])
  createdAt      DateTime   @default(now())
}

model Preference {
  id             String     @id @default(uuid())
  userId         String     @unique
  theme          String?    // ex: "dark", "light"
  language       String?    // ex: "fr", "en"
  notifications  Boolean?   @default(true)
  user           User       @relation(fields: [userId], references: [id])
}
